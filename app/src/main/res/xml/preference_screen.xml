<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/display_settings">
        <ListPreference
            android:key="listPref_theme"
            android:title="@string/select_theme"
            android:defaultValue="default"
            android:entries="@array/item_theme_entry"
            android:entryValues="@array/item_theme_value" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about_us">
        <Preference android:key="dialog_pref"
            android:title="@string/info_title"
            android:summary="@string/info_title_summary"/>
        <Preference android:key="mail_pref"
            android:title="@string/contact"
            android:summary="@string/contact_summary"/>
        <Preference android:key="social_pref"
            android:title="@string/social_media"
            android:summary="@string/follow_us_summary"/>
    </PreferenceCategory>



</PreferenceScreen>