<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimalPedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verrosgrren</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueButton</item>
        <item name="colorSecondaryVariant">@color/blueButtonDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="bottomAppBarStyle">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primaryTitleColorNight</item>
        <item name="android:windowBackground">@color/colorPrimaryNight</item>
        <item name="android:buttonStyle">@style/styleButtons</item>


    </style>

    <style name="styleButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/blueButton</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
